<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/todo_item_view">
    <!--app:srcCompat="@android:drawable/btn_radio_off"-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/btn_radio_off"
        android:id="@+id/todo_radio_button"
    />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fl_todo_item">
        <TextView
            android:id="@+id/todo_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title_for_Test"
            android:layout_gravity="center_vertical|left"
            android:layout_margin="@dimen/fab_margin"
            />

        <TextView
            android:id="@+id/todo_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date-for-test"
            android:layout_gravity="center_vertical|right"
            android:layout_margin="@dimen/fab_margin" />
    </FrameLayout>





</LinearLayout>