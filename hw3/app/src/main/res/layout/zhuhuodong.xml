<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".主活动">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shizhongbeijing">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <com.bytedance.jstu.homework.指针式时钟视图
                android:id="@+id/时钟视图"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_marginTop="150dp" />

            <TextView
                android:id="@+id/数字时钟文字"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="11:45:14"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:typeface="serif" />

        </LinearLayout>

        <EditText
            android:id="@+id/词典搜索框"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/gray_400"
            android:drawableStart="@android:drawable/ic_menu_compass"
            android:drawableTop="@color/purple_500"
            android:ems="10"
            android:hint="词典"
            android:imeOptions="actionSearch"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold" />

    </FrameLayout>

</LinearLayout>